<!DOCTYPE html>
<html>
<head>
    <title>School - View All</title>
</head>
<style>
    div.notification {
        width: 100%;
        text-align: center;
        padding: .2em;
        color: SlateGray;
    }

    div.notification.success {
        background-color: LightGreen;
    }

    div.notification.error {
        background-color: LightCoral;
    }
</style>
<body>
    <h1>Schools</h1>
    <%
    if (locals.noti)
    {
        var noti_text = "Success! School '" + locals.school_name + "' " + locals.noti + "!";
        var type = "";
        if (locals.noti === "err") {
            noti_text = "Error! School not deleted!\nError message: " + locals.school_name + "";
            type=" error";
        } else {
            type=" success";
        }
    %>
    <div class="notification<%= type %>" id="notification"><%= noti_text %></div>
    <% } %>
    <a href="/school/add">Add School</a>
    <table border="1">
        <tr>
            <th>School</th>
            <th>Street Address</th>
            <th>Zip Code</th>
            <th>Actions</th>
        </tr>
        <% for(var i = 0; i < school.length; i++) { %>
            <tr>
                <td><%= school[i].school_name %></td>
                <td><%= school[i].street %></td>
                <td><%= school[i].zip_code %></td>
                <td>
                    <a href="/school/edit/?school_id=<%= school[i].school_id %>">Edit</a>
                    <a href="/school/delete/?school_id=<%= school[i].school_id %>">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>